<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="168.535" Width="285.812">
    <Border Padding="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="PowerDM" HorizontalAlignment="Center"/>
            <TextBlock Grid.Row="1" Grid.Column="0" Text="UserName" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <TextBox x:Name="txtUsername" Grid.Row="1" Grid.Column="1" Padding="3" Margin="5 2 0 0" />
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Password" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <PasswordBox x:Name="txtPassword" Grid.Row="2" Grid.Column="1" Padding="3" Margin="5 2 0 0" />
            <Button x:Name="btnLogin" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Content="Login" HorizontalAlignment="Center" Width="70" Height="20"/>
        </Grid>
    </Border>
</Window>

