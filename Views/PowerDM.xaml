                <StackPanel Grid.Column="0" Grid.Row="0">
                    <Button x:Name="btnNewChar" Margin="5 5">
                        <Image Source="C:\Users\vincentn\Desktop\Scripts\PowerDM\images\newchar.png"/>
                    </Button>
                </StackPanel>
                <StackPanel Grid.Column="1" Grid.Row="0">
                    <Button x:Name="btnLoadChar" Margin="5 5">
                        <Image Source="C:\Users\vincentn\Desktop\Scripts\PowerDM\images\loadchar.png" />
                    </Button>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</Window>
